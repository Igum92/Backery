<% end %>

<% if @product.is_veg==true %>
	<h5><b>Vegeterian: </b><img width="20" height="20" src= <%='/images/yes.png' %>>
<%	else %>
	<h5><b>Vegeterian: </b><img width="20" height="20" src= <%='/images/no.png' %>>	
<% end %>


